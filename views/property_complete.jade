


ul(class="nav nav-tabs")
    li(class="hamburger")
        a(href="#" id="hamburger") 
            span(class="glyphicon glyphicon-menu-hamburger")
    li(class="active")
        a(data-toggle="tab" href="#images") Images
    //- li
